        color: var(--form_text);
        width: var(--botao-width);
        height: 180px;
        border-radius: 10px;
        padding: 20px;
        font-weight: 500;
        font-size: larger;
        margin: 30px calc(var(--processo-width) / 2 - var(--botao-width) / 2);
        text-align: left;
    }

    .caixa_img{
        background-size: cover;
        width: 110px;
        height: 110px;
        float: left !important;
        border-radius: 10px;
        margin: 10px 20px 10px 0px;
    }

    .barra{
        height: 5px;
        background-color: #cef3f5;
        margin-top: 10px;
        margin-left: 130px;
        width: 580px;
    }

    .infobarra{
        font-size: small;
        color: #cef3f5;
        margin-bottom: 10px;
    }

    .infos{
        font-size: medium;
    }

    /******************************************************************************/
    /**************************Configurações texto**************************/

    #conteudo{
        color: var(--form_text);
        font-size: medium;
        width: var(--botao-width);
        margin: 0px calc(var(--processo-width) / 2 - var(--botao-width) / 2);
        border: 1px solid var(--form_text);
        border-radius: 10px;
        padding: 20px;
    }

    .concluido{
        color: var(--form_text);
    }

    .n-concluido{
        color: var(--form_border);
    }

    /******************************************************************************/

/******************************************************************************/
/**************************Configurações animação**************************/

.circles{
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    height: 940px;
    overflow: hidden;
}

.circles li{
    position: absolute;
    display: block;
    list-style: none;
    width: 20px;
    height: 20px;
    background: rgba(255, 255, 255, 0.2);
    animation: animate 25s linear infinite;
    bottom: -150px;
}


.circles li:nth-child(1){
    left: 25%;
    width: 80px;
    height: 80px;
    animation-delay: 0s;
}


.circles li:nth-child(2){
    left: 5%;
    width: 120px;
    height: 120px;
    animation-delay: 2s;
    animation-duration: 12s;
}

.circles li:nth-child(3){
    left: 70%;
    width: 20px;
    height: 20px;
    animation-delay: 4s;
}

.circles li:nth-child(4){
    left: 40%;
    width: 60px;
    height: 60px;
    animation-delay: 0s;
    animation-duration: 18s;
}

.circles li:nth-child(5){
    left: 65%;
    width: 20px;
    height: 20px;
    animation-delay: 0s;
}

.circles li:nth-child(6){
    left: 75%;
    width: 110px;
    height: 110px;
    animation-delay: 3s;
}

.circles li:nth-child(7){
    left: 35%;
    width: 150px;
    height: 150px;
    animation-delay: 7s;
}

.circles li:nth-child(8){
    left: 50%;
    width: 25px;
    height: 25px;
    animation-delay: 15s;
    animation-duration: 45s;
}

.circles li:nth-child(9){
    left: 20%;
    width: 30px;
    height: 30px;
    animation-delay: 2s;
    animation-duration: 35s;
}

.circles li:nth-child(10){
    left: 85%;
    width: 150px;
    height: 150px;
    animation-delay: 0s;
    animation-duration: 11s;
}



@keyframes animate {

    0%{
        transform: translateY(0) rotate(0deg);
        opacity: 1;
        border-radius: 20%;
    }

    100%{
        transform: translateY(-960px) rotate(720deg);
        opacity: 0;
        border-radius: 30%;
    }

}

