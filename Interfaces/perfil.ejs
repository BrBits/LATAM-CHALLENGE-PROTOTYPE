.circles{
    position: absolute;
    top: 0px;
    left: 0;
    width: 100%;
    height: 800px;
    overflow: hidden;
}

.circles li{
    position: absolute;
    display: block;
    list-style: none;
    width: 20px;
    height: 20px;
    border-radius: 20%;
    animation: animate 25s linear infinite;
    bottom: 0px;
    opacity: 0;
}


.circles li:nth-child(1){
    left: 25%;
    width: 80px;
    height: 80px;
    background-color: #35c2dfff;
    animation-delay: 0s;
}


.circles li:nth-child(2){
    left: 5%;
    width: 120px;
    height: 120px;
    animation-delay: 2s;
    background-color: #35c2dfff;
    animation-duration: 12s;
}

.circles li:nth-child(3){
    left: 70%;
    width: 20px;
    height: 20px;
    background-color: #35c2dfff;
    animation-delay: 4s;
}

.circles li:nth-child(4){
    left: 40%;
    width: 60px;
    height: 60px;
    background-color: #9154f8ff;
    animation-delay: 0s;
    animation-duration: 18s;
}

.circles li:nth-child(5){
    left: 65%;
    width: 20px;
    height: 20px;
    background-color: #9154f8ff;
    animation-delay: 0s;
}

.circles li:nth-child(6){
    left: 75%;
    width: 110px;
    height: 110px;
    background-color: #9154f8ff;
    animation-delay: 3s;
}

.circles li:nth-child(7){
    left: 35%;
    width: 150px;
    height: 150px;
    background-color: rgb(226, 156, 35);
    animation-delay: 7s;
}

.circles li:nth-child(8){
    left: 50%;
    width: 25px;
    height: 25px;
    background-color: rgb(226, 156, 35);
    animation-delay: 15s;
    animation-duration: 45s;
}

.circles li:nth-child(9){
    left: 20%;
    width: 30px;
    height: 30px;
    background-color: rgb(226, 156, 35);
    animation-delay: 2s;
    animation-duration: 35s;
}

.circles li:nth-child(10){
    left: 85%;
    width: 150px;
    height: 150px;
    background-color: rgb(226, 156, 35);
    animation-delay: 0s;
    animation-duration: 11s;
}



@keyframes animate {

    0%{
        transform: translateY(0) rotate(0deg);
        opacity: 0;
    }
    50%{
        transform: translateY(-400) rotate(360deg);
        opacity: 1;
    }
    100%{
        transform: translateY(-800px) rotate(720deg);
        opacity: 0; 
    }

}


